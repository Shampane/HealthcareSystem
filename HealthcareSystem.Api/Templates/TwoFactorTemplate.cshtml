@model HealthcareSystem.Api.Templates.TwoFactorModel;
<div style="font-family: 'Open Sans', sans-serif;">
    <h1>Password Reset</h1>
    <p>Hello, @Model.Email</p>
    <p>
        To log in to your account, follow the link:
        <a style="word-wrap: break-word;"
           href="@Model.CallbackUrl">@Model.CallbackUrl
        </a>
    </p>
    <p>Use this code:</p>
    <h2 style="color: dodgerblue">@Model.OTP</h2>
</div>
 